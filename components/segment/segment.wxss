.segment-group{
  width: 100%;
}

.segment-group .segment-item-group{
  width: 100%;
  display: flex;
  height: 70rpx;
  border: 1px solid #e4e4e4;
  border-bottom: none;
  border-radius: 4rpx;
}

.segment-item-group .segment-item{
  flex: 1;
  border-right: 1px solid #e4e4e4;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.segment-item-group .segment-item:last-of-type{
  border: none;
}

.segment-item-group .active{
  background: #e64340;
  color: #fff;
}