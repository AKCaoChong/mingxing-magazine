.emag-group{
  display: flex;
  flex-direction: row;
  width: 90%;
  padding: 20rpx 0;
  margin: 20rpx auto;
  align-items: stretch;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}

.emag-group .emag-img{
  width: 195rpx;
  height: 292rpx;
  overflow: hidden;
}

.emag-img image{
  width: 195rpx;
  height: 292rpx;
}

.right-group{
  display: flex;
  width: 65%;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.title-group{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.emag-type{
  color: #999;
  padding-top: 5rpx;
}

.time-group{
  display: flex;
  color: #ccc;
  flex-direction: column;
  align-self: flex-end;
  text-align: right;
}