.title-view{
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: left;
  padding: 30rpx 10rpx;
}
.title-view text{
  font-weight: bold;
}
.giving-group{
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 30rpx 10rpx;
}

.giving-title{
  font: 30rpx;
  text-align: left;
}

.giving-input{
  flex: 1;
  padding: 0 20rpx;
  text-align: right;
}

.giving-group image{
  width: 20rpx;
  height: 36rpx;
}

.giving-sum{
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: left;
  padding: 30rpx 10rpx;
}

.givingtofriend{
  margin-top: 80rpx;
  color: white;
  background: #c6343e;
  font-size: 30rpx;
  width: 60%;
  border-radius: 10rpx;
}

.bottom-des{
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  margin: 0 auto;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}